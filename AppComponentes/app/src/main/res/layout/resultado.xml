<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/xtv1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <GridLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:rowCount="1"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/xtv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/botonPrimo"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:lineSpacingExtra="8sp"
            android:text="N-Primo"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/botonFibo"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:lineSpacingExtra="8sp"
            android:text="Fibonacci"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/botonPalindromo"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:lineSpacingExtra="8sp"
            android:text="Palindromo"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/botonMaravilloso"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:lineSpacingExtra="8sp"
            android:text="Maravilloso"
            tools:ignore="MissingConstraints" />

    </GridLayout>

    <TextView
        android:id="@+id/xtvNum"
        android:layout_width="500px"
        android:layout_height="500px"
        android:text="Luis Rico"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>