<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/xtv1"
        android:layout_width="500px"
        android:layout_height="500px"
        android:text="Luis Rico"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese un nÃºmero"
        android:inputType="number"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/botonPrimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8sp"
        android:text="N-Primo"
        app:layout_constraintTop_toBottomOf="@id/etNumero"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/botonFibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8sp"
        android:text="Fibonacci"
        app:layout_constraintStart_toEndOf="@id/botonPrimo"
        app:layout_constraintTop_toBottomOf="@id/etNumero"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/botonPalindromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8sp"
        android:text="Palindromo"
        app:layout_constraintStart_toEndOf="@id/botonFibo"
        app:layout_constraintTop_toBottomOf="@id/etNumero"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/botonMaravilloso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8sp"
        android:text="Maravilloso"
        app:layout_constraintStart_toEndOf="@id/botonPrimo"
        app:layout_constraintTop_toBottomOf="@id/botonFibo"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>